<div class="text-center form-tweets-create mx-auto">
	<%= form_tag("/tweets/#{params[:id]}/update") do %>
		<div class="form-group">
			<!-- もしエラーメッセージがあれば表示 -->
			<% @tweet.errors.full_messages.each do |message| %>
				<div class="alert alert-danger text-left" role="alert">
					<%= message %>
				</div>
			<% end %>
			<p class="mb-4 h4 text-secondary">編集する</p>
			<textarea class="form-control" name="content" rows="4" placeholder="※140文字以内でつぶやいてください"><%= @tweet.content %></textarea>
		</div>
		<input type="submit" class="btn btn-primary" value="つぶやく">
	<% end %>
</div>